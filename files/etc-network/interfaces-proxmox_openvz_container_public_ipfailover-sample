# Container is public addressable via ip-failover (eth0)
# Container can dialog with other container behind nat network (eth1)
# See configuration interfaces-proxmox_using_ipfailover_sample

auto lo
iface lo inet loopback

# allowed by vmbr0 in interfaces-proxmox_using_ipfailover_sample
auto eth0 
iface eth0 inet static 
    address 212.83.143.235
    netmask 255.255.255.255 
    broadcast 212.83.143.235 
    post-up route add 195.154.166.1  dev eth0 
    post-up route add default gw 195.154.166.1 
    post-down route del 195.154.166.1  dev eth0 
    post-down route del default gw 195.154.166.1 

# Nat mapping allowed by vmbr1 in interfaces-proxmox_using_ipfailover_sample
auto eth1
iface eth1 inet static
	address 192.168.0.105
	netmask	255.255.255.0
	broadcast 192.168.0.255
	gateway 192.168.0.1

