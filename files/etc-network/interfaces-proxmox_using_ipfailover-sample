auto lo
iface lo inet loopback

auto eth1
iface eth1 inet dhcp

auto vmbr0
iface vmbr0 inet static
	address 195.154.166.164
	netmask 255.255.255.0
	gateway 195.154.166.1
	bridge_ports eth0
	bridge_stp off
	bridge_fd 0

auto vmbr0.42
iface vmbr0.42 inet static
	address 10.0.0.1
	netmask 255.0.0.0
	broadcast 10.255.255.255
	
	vlan_raw_device vmbr0 

	post-up echo 1 > /proc/sys/net/ipv4/ip_forward
	post-up 	iptables -t nat -A POSTROUTING -s 10.0.0.0/8 -o vmbr0 -j SNAT --to 195.154.166.164
	post-down 	iptables -t nat -D POSTROUTING -s 10.0.0.0/8 -o vmbr0 -j SNAT --to 195.154.166.164

# Configuration for allow nat mapping to container
auto vmbr1
iface vmbr1 inet static
        address  192.168.0.1
        netmask  255.255.255.0
        broadcast 192.168.0.255
        bridge_ports dummy0
        bridge_stp off
        bridge_fd 0
	
	post-up 	iptables -t nat -A POSTROUTING -s 192.168.0.0/24 -o vmbr0 -j SNAT --to 195.154.166.164
	post-down 	iptables -t nat -D POSTROUTING -s 192.168.0.0/24 -o vmbr0 -j SNAT --to 195.154.166.164

